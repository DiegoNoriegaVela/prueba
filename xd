-- Lista todos los campos de TABCARD con nombres "reales" y tipos
SELECT  SYSTEM_COLUMN_NAME   AS CAMPO_SIST,   -- este es el que usa CPYF/INCREL
        COLUMN_NAME          AS CAMPO_LOGICO,
        DATA_TYPE,
        LENGTH,
        NUMERIC_SCALE,
        COLUMN_HEADING
FROM QSYS2.SYSCOLUMNS
WHERE SYSTEM_TABLE_SCHEMA = 'UBLIBPR'   -- ajusta la librer√≠a si fuera otra
  AND SYSTEM_TABLE_NAME  = 'TABCARD'
ORDER BY ORDINAL_POSITION;